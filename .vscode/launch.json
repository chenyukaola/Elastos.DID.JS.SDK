{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Jest Tests",
        "type": "pwa-node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "args": [
          //"--inspect-brk",
          "--config",
          "${workspaceRoot}/jest.node.config.ts",
          "--no-cache",
          "--runInBand",
          "--detectOpenHandles",
          "--silent=true",
          "${workspaceRoot}/tests/idchainoperations.test",
        ],
        "runtimeArgs": [
          "--nolazy"
        ],
        "outFiles": [
          "${workspaceRoot}/dist/**/*"
        ],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "internalConsoleOptions": "neverOpen",
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ]
      }
    ]
  }